<h1>Burgers!</h1>

<h2>Eat These Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{this.id}}. {{this.burger_name}}
        <button data-id = "{{this.id}}" data-devoured = "true" class="devour">Devour!</button>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers in yo stomach</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{this.id}}. {{this.burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Submit A Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg-input">Burger name:</label>
    <input type="text" id="burg-input" name="name">
  </div>
  <button type="submit">Submit</button>
</form>
